<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow item -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#40000000"/> <!-- Semi-transparent black color for shadow -->
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="-2dp"/>
            <size android:height="68dp" android:width="306dp"/> <!-- Slightly larger to create the shadow effect -->
        </shape>
    </item>

    <!-- Main shape item -->
    <item android:top="0dp" android:bottom="4dp"> <!-- Adjust to position above the shadow -->
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <stroke android:color="#52677294" android:width="1dp"/>
            <solid android:color="#FFFFFF"/>
            <size android:height="68dp" android:width="308dp"/>
        </shape>
    </item>
</layer-list>
